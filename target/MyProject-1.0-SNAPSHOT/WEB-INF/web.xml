<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--CONTROLLERS-->
    <!--products-->
    <servlet>
        <servlet-name>productController</servlet-name>
        <servlet-class>com.solomanin.controller.ProductController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>productController</servlet-name>
        <url-pattern>/product.do</url-pattern>
    </servlet-mapping>
    <!--mock -->
    <servlet>
        <servlet-name>mockController</servlet-name>
        <servlet-class>com.solomanin.controller.MVCMockController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>mockController</servlet-name>
        <url-pattern>/mock.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>sessionMockController</servlet-name>
        <servlet-class>com.solomanin.controller.SessionMockController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sessionMockController</servlet-name>
        <url-pattern>/sessionMock.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>cookieMockController</servlet-name>
        <servlet-class>com.solomanin.controller.CookieMockController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cookieMockController</servlet-name>
        <url-pattern>/cookieMock.do</url-pattern>
    </servlet-mapping>

</web-app>